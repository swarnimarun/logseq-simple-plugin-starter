{
    // feel free to edit this to your liking, doesn't affect the build
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "noEmit": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}